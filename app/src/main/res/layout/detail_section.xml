<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/ds_name"
        android:text=""
        android:paddingStart="@dimen/item_margin_padding"
        android:paddingEnd="@dimen/item_margin_padding"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="start"
        android:minHeight="@dimen/item_minHeight"
        android:textSize="@dimen/item_textSize"
        android:textStyle="bold|normal"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/ds_unit"
        android:text=""
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="start"
        android:minHeight="@dimen/item_minHeight"
        android:textSize="@dimen/item_textSize"
        android:textStyle="normal"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/ds_quantity"
        android:text=""
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="end"
        android:minHeight="@dimen/item_minHeight"
        android:textSize="@dimen/item_textSize"
        android:textStyle="normal"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/ds_spacer"
        android:text=""
        android:layout_width="@dimen/item_margin_padding"
        android:maxWidth="@dimen/item_margin_padding"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="end"
        android:minHeight="@dimen/item_minHeight"
        android:textSize="@dimen/item_textSize"
        android:textStyle="normal"
        android:textColor="@android:color/black" />



</LinearLayout>